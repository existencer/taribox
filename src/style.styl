.tari-nav
  flex 0 0 200px
  width 200px
  background-color #ff9b1f
  transition .8s
  position relative
.tari-logo
  width 100px
  height 100px
  position absolute
  top 10px
  left 50%
  transform translateX(-50%)
  transform-origin 50% 0
  transition transform .8s
.github-link
  color #fff
  margin-top 120px
  display block
  width 100%
  overflow hidden
  font-size 14px

.flex-container
  flex 1 1 100%
  display flex
  align-items center
  justify-content center

.tb-remarks
  color #0004
.tari-catalog
  display flex
  flex-direction column
  ul
    margin 4px 0
    padding 0
    text-align left
  li
    list-style none
    margin 2px 0
    padding 0 4px
.tari-catalog-title
  margin 0
  text-align left

@media screen and (max-width 600px)
  .tari-nav
    flex 0 0 50px
  .tari-logo
    transform translateX(-50%) scale(0.4)

@media screen and (max-width 350px)
  .tari-nav
    flex 0 0 0
    width 0