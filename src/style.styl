.tari-nav
  flex 0 0 160px
  width 160px
  background-color #ff9b1f
  transition .8s
  position relative
.tari-logo
  width 100px
  height 100px
  position absolute
  top 10px
  left 50%
  transform translateX(-50%)
  transform-origin 50% 0
  transition transform .8s
.github-link
  color #fff
  margin-top 120px
  display block
  width 100%
  overflow hidden
  font-size 14px

.flex-container
  flex 1 1 100%
  display flex
  align-items center
  justify-content center

.tb-remarks
  color #0004
.tari-catalog
  display flex
  flex-direction column
  width 80%
  min-width 300px
  max-width 700px
  margin auto
  ul
    margin 4px 0
    padding 0
    text-align left
  li
    list-style none
    margin 20px 0
.tari-catalog-title
  padding-left 10px
  text-align left
.tari-catalog-intro
  margin 2px 0
  padding 9px
  font-size 12px
  line-height 20px
  min-height 50px
  background-color #fff
  box-sizing border-box
  border-radius 5px
  border solid 1px #eee
  box-shadow 0 2px 4px #eee8

@media screen and (max-width 600px)
  .tari-nav
    flex 0 0 50px
  .tari-logo
    transform translateX(-50%) scale(0.4)

@media screen and (max-width 350px)
  .tari-nav
    flex 0 0 0
    width 0